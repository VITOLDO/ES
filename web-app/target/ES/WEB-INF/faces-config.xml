<?xml version="1.0" encoding="UTF-8"?>

<faces-config 
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<managed-bean>
		<managed-bean-name>TradingOrderBean</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.TradingOrderBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.RegistrationBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>rates</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.RatesManagedBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>AccountBean</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.AccountManageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<description>View information for all orders</description>
		<managed-bean-name>ordersHistoryBean</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.OrdersHistoryBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>changePass</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.ChangePassBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>Logout</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.LogoutBean</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userManageBean</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.UserManageBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>eventBean</managed-bean-name>
		<managed-bean-class>com.epam.tradingsystem.broker.web.backingbeans.EventManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<converter>
		<converter-id>DecimalConverter</converter-id>
		<converter-class>com.epam.tradingsystem.broker.web.converters.DecimalConverter</converter-class>
	</converter>

</faces-config>
